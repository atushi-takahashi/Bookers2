<div class="container">
  <div class="book-edit">
    <div class="box1"></div>
    <div class="box2">
      <h2>Editing User</h2>
      <div class="form">
        <%= form_with model:@user, local: true do |f| %>
          <%= f.label :name, "Name" %><br>
          <%= f.text_field :name, class:"name" %><br>
          <%= f.label :profile_image, "Image" %><br>
          <%= f.attachment_field :profile_image, class:"image" %><br>
          <%= f.label :introduction, "Introduction" %><br>
          <%= f.text_area :introduction, rows: 10, class:"introduction" %><br>
          <%= f.submit "Update Book", class:"btn" %>
        <% end %>
      </div>  
    </div>
    <div class="box3"></div>
  </div>
</div>