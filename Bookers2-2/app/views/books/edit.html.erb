<div class="container">
  <div class="book-edit">
    <div class="box1"></div>
    <div class="box2">
      <h2>Editing Book</h2>
      <div class="form">
        <%= form_with model:@book, local: true do |f| %>
          <%= f.label :title, "Title" %><br>
          <%= f.text_field :title, class:"title" %><br>
          <%= f.label :body, "Opinion" %><br>
          <%= f.text_area :body, rows: 10, class:"body" %><br>
          <%= f.submit "Update Book", class:"btn" %>
        <% end %>
      </div>  
    </div>
    <div class="box3"></div>
  </div>
</div>