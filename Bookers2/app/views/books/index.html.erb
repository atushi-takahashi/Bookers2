<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<br><%= f.submit 'Create Book' %>
<% end %>

<table>
  <thead>
    <h1>Books</h1>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

