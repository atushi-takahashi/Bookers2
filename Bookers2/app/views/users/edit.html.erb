  <div class="mt-20 ml-20">
    <h2 class="text-left">User info</h2>
    <!--<%= form_with model:@user, local:true do |f| %>-->
    <%= form_with model:@user, url:"/users/#{@user.id}", local:true do |f| %>
    <% if @user.errors.any? %>
    <%= @user.errors.count %>件のerrorが発生しました
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
    <div class="padding-bottom-15">
    <%= f.label :name, 'Name' %>
    <br><%= f.text_field :name %>
    </div>
    
   <div class="form-group has-icon">
    <%= f.label :profile_image_id, 'Image' %>
    <br><%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>
  
    <div class="padding-bottom-15">
    <%= f.label :introduction, 'Introduction' %>
    <br><%= f.text_area :introduction %>
    </div>
    <%= f.submit 'Update User' %>
    <% end %>
    <% end %>
  </div>